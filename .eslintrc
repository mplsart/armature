{
  // I want to use babel-eslint for parsing!
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "settings": {
    "react": {
      "pragma": "React", // Pragma to use, default to "React",
      "version": "0.14.0"
    }
  },
  "env": {
    // I write for browser
    "browser": true,
    // in CommonJS
    "node": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "modules": true
      }
    }
  },
  "globals": {
    "Promise": true
  },
  extends: ["eslint:recommended", "plugin:react/recommended"],
  // To give you an idea how to override rule options:
  "rules": {
    "quotes": [2, "single"],
    "eol-last": [0],
    "no-mixed-requires": [0],
    "no-underscore-dangle": [0],
     "no-console": [0]
  }
}